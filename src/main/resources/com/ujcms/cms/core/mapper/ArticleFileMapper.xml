        delete
        from ujcms_article_file
        where article_id_ = #{article_id_,jdbcType=INTEGER}
    </delete>
    <delete id="deleteByChannelId" parameterType="int">
        delete
        from ujcms_article_file
        where exists(select * from ujcms_article t where t.id_ = ujcms_article_file.article_id_ and t.channel_id_ = #{channelId,jdbcType=INTEGER})
    </delete>
